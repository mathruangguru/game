    <script>
        // --- TV SCALING LOGIC ---
        function scaleToFit() {
            const viewport = document.getElementById('tv-viewport');
            const targetWidth = 960;
            const targetHeight = 540;
            
            const windowWidth = window.innerWidth;
            const windowHeight = window.innerHeight;
            
            // Hitung skala agar pas di layar (contain)
            const scale = Math.min(windowWidth / targetWidth, windowHeight / targetHeight);
            
            viewport.style.transform = `scale(${scale})`;
        }

        // Jalankan saat load dan saat window di-resize
        window.addEventListener('resize', scaleToFit);
        window.addEventListener('load', scaleToFit);
        scaleToFit(); // Panggil langsung agar instan


        // --- DATA & LOGIC ---
        const games = [
            { name: "Algebra Rush", pic: "Dhanar", topic: "Persamaan Linear Satu Variabel", link: "https://mathruangguru.github.io/game/algebra-rush/" },
            { name: "Integer Zap", pic: "Dhanar", topic: "Operasi Hitung Bilangan Bulat", link: "https://mathruangguru.github.io/game/integer-zap/" },
            { name: "Probability Battle Cards", pic: "Rohmat", topic: "Peluang", link: "https://matrohmatmath.com/game/probability-battle-cards/" },
            { name: "Battle Kelipatan", pic: "Dhanar", topic: "Kelipatan Persekutuan", link: "https://mathruangguru.github.io/game/battle-kelipatan/" },
            { name: "Battle Faktor", pic: "Dhanar", topic: "Faktor Persekutuan", link: "https://mathruangguru.github.io/game/battle-faktor/" },
            { name: "Substitute the Operator", pic: "Dhanar", topic: "Operasi Bilangan", link: "https://mathruangguru.github.io/game/substitute-the-operator/" },
            { name: "Picto Resto", pic: "Rohmat", topic: "Piktogram", link: "https://matrohmatmath.com/game/picto-resto/" },
            { name: "Rocket Rounding", pic: "Mayang", topic: "Pembulatan/Taksiran", link: "https://mathruangguru.github.io/game/pembulatan/" },
            { name: "Math Snake", pic: "Mayang", topic: "Barisan Aritmetika dan Geometri", link: "https://mathruangguru.github.io/game/snake-math/" },
            { name: "Navigator Linear", pic: "Rohmat", topic: "Persamaan Garis Lurus", link: "https://matrohmatmath.com/game/navigator-linear" },
            { name: "Battle Akar Kuadrat", pic: "Dhanar", topic: "Persamaan Kuadrat", link: "https://mathruangguru.github.io/game/battle-akar-kuadrat/" },
            { name: "Sifat Fungsi Kuadrat", pic: "Dhanar", topic: "Fungsi Kuadrat", link: "https://mathruangguru.github.io/game/sifat-fungsi-kuadrat/" },
            { name: "Klinik Optik", pic: "Rohmat", topic: "Cahaya dan Alat Optik", link: "https://matrohmatmath.com/game/klinik-optik" }
        ];

        const tbody = document.getElementById('gameTableBody');
        const countSpan = document.getElementById('gameCount');
        const emptyState = document.getElementById('emptyState');

        function renderTable(data) {
            tbody.innerHTML = '';
            
            if (data.length === 0) {
                emptyState.classList.remove('hidden');
                return;
            } else {
                emptyState.classList.add('hidden');
            }

            data.forEach(game => {
                const row = document.createElement('tr');
                row.className = "hover:bg-indigo-50 transition-colors duration-150 border-b border-gray-100 last:border-0 grid grid-cols-12 gap-2 items-center py-2";
                
                // Layout Grid Row
                row.innerHTML = `
                    <td class="col-span-4 font-semibold text-indigo-700 truncate pr-2" title="${game.name}">${game.name}</td>
                    <td class="col-span-2">
                        <span class="px-2 py-0.5 text-[10px] font-bold rounded-full bg-gray-100 text-gray-600 border border-gray-200">
                            ${game.pic}
                        </span>
                    </td>
                    <td class="col-span-4 text-xs text-gray-600 truncate pr-2" title="${game.topic}">${game.topic}</td>
                    <td class="col-span-2 text-center">
                        <a href="${game.link}" target="_blank" class="inline-flex items-center justify-center px-3 py-1.5 bg-indigo-600 text-white rounded hover:bg-indigo-700 text-xs font-bold no-underline w-full shadow-sm hover:shadow-md transition-all">
                            Main <i class="fas fa-play ml-1.5 text-[10px]"></i>
                        </a>
                    </td>
                `;
                tbody.appendChild(row);
            });
            countSpan.textContent = data.length;
        }

        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const filteredGames = games.filter(game => 
                game.name.toLowerCase().includes(filter) || 
                game.topic.toLowerCase().includes(filter) ||
                game.pic.toLowerCase().includes(filter)
            );
            renderTable(filteredGames);
        }

        renderTable(games);
    </script>
</body>
