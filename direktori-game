    <!-- Viewport 960x540 -->
    <div id="tv-viewport">
        
        <!-- Header Section (Fixed Height) -->
        <div class="bg-indigo-600 px-6 py-4 text-white flex justify-between items-center shadow-md z-10 shrink-0 h-20">
            <div class="flex items-center gap-3">
                <img src="https://imgix3.ruangguru.com/assets/miscellaneous/png_zekej2_3984.png" alt="Logo Ruangguru" class="h-10 bg-white rounded p-1 shadow-sm">
                <div>
                    <h1 class="text-xl font-bold leading-tight">Direktori Game Edukasi</h1>
                    <p class="text-indigo-200 text-xs">Menu Interaktif TV</p>
                </div>
            </div>
            
            <!-- Search Bar -->
            <div class="relative w-64">
                <input type="text" id="searchInput" onkeyup="filterTable()" placeholder="Cari game..." 
                    class="w-full pl-9 pr-3 py-2 rounded-md text-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-300 shadow-inner">
                <i class="fas fa-search absolute left-3 top-2.5 text-gray-400 text-sm"></i>
            </div>
        </div>

        <!-- Header Tabel (Fixed) -->
        <div class="bg-indigo-50 border-b border-indigo-100 px-6 py-2 grid grid-cols-12 gap-2 text-xs font-bold text-indigo-800 uppercase tracking-wider shrink-0">
            <div class="col-span-4">Nama Game</div>
            <div class="col-span-2">PIC</div>
            <div class="col-span-4">Topik</div>
            <div class="col-span-2 text-center">Aksi</div>
